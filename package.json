{
  "name": "influence",
  "private": true,
  "scripts": {
    "start": "meteor run --port 4000 --settings settings.json",
    "postinstall": "run-s build:*",
    "pretest": "standard | snazzy",
    "test": "TEST_CLIENT=0 meteor test --once --driver-package meteortesting:mocha --port 3030",
    "test:watch": "TEST_WATCH=1 TEST_CLIENT=0 meteor test --driver-package meteortesting:mocha --port 3030",
    "lint": "standard | snazzy",
    "lint:fix": "standard --fix",
    "build": "run-s build:*",
    "build:css": "postcss --config ./postcss.config.js --output ./client/bundle.css ./imports/ui/main.css",
    "build:svg": "node ./private/build/createSvgComponents",
    "watch": "run-p watch:*",
    "watch:css": "nodemon --quiet --watch ./imports/ui --ext css --exec npm run build:css",
    "watch:svg": "nodemon --quiet --watch ./private/svgs/icons --ext svg --exec npm run build:svg",
    "watch:server": "meteor run --port 4000 --settings settings.json"
  },
  "dependencies": {
    "babel-runtime": "^7.0.0-beta.0",
    "classnames": "^2.2.5",
    "deep-equal": "^1.0.1",
    "fullcontact": "^1.0.0",
    "joi-browser": "10.6.0",
    "lodash.difference": "^4.5.0",
    "lodash.escaperegexp": "^4.1.2",
    "lodash.omit": "^4.5.0",
    "meteor-node-stubs": "~0.2.4",
    "nock": "^9.0.17",
    "prop-types": "^15.5.10",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-linkifier": "^3.1.1",
    "react-router-dom": "^4.2.2",
    "to-style": "^1.3.3",
    "twitter": "^1.7.1"
  },
  "devDependencies": {
    "async": "^2.5.0",
    "autoprefixer": "^6.5.1",
    "babel-eslint": "^8.0.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "basscss": "^8.0.2",
    "basscss-responsive-margin": "^1.1.0",
    "basscss-responsive-padding": "^1.1.0",
    "mkdirp": "^0.5.1",
    "nodemon": "^1.11.0",
    "npm-run-all": "^3.1.1",
    "postcss-calc": "^5.3.1",
    "postcss-cli": "^2.6.0",
    "postcss-custom-media": "^5.0.1",
    "postcss-custom-properties": "^5.0.1",
    "postcss-easy-import": "^1.0.1",
    "postcss-functions": "^2.1.1",
    "postcss-import": "^8.1.2",
    "postcss-inline-svg": "^3.0.0",
    "postcss-write-svg": "^3.0.1",
    "pre-commit": "^1.1.3",
    "snazzy": "^5.0.0",
    "standard": "^8.4.0"
  },
  "standard": {
    "parser": "babel-eslint"
  }
}
